<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    tools:context=".student.ui.RequestLeaveActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make Leave Request"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="20dp" />

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                app:neumorph_shapeType="pressed">

                <TextView
                    android:id="@+id/leaveStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    android:textSize="15sp"
                    android:hint="Select Start Date"
                    android:textColorHint="@color/colorAccent"
                    android:textColor="@color/colorAccent"
                    android:background="@android:color/transparent" />

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                app:neumorph_shapeType="pressed">

                <TextView
                    android:id="@+id/leaveEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    android:textSize="15sp"
                    android:hint="Select End Date"
                    android:textColorHint="@color/colorAccent"
                    android:textColor="@color/colorAccent"
                    android:background="@android:color/transparent" />

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                app:neumorph_shapeType="pressed">

                <EditText
                    android:id="@+id/reason_ReqLeave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:padding="5dp"
                    android:hint="Write Reason For the Leave"
                    android:textColorHint="@color/colorAccent"
                    android:textColor="@color/colorAccent"
                    android:background="@android:color/transparent" />

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphButton
                android:id="@+id/ReqLeaveBtn_ReqLeave"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:layout_gravity="center_horizontal"
                app:neumorph_backgroundColor="@color/colorAccent"
                android:textColor="@color/white"
                android:text="Request Leave"></soup.neumorphism.NeumorphButton>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>